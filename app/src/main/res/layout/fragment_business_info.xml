<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.hairfie.hairfie.BusinessActivity"
    tools:showIn="@layout/activity_business"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/address"
            android:lines="2"
            android:maxLines="2"
            android:gravity="left|center_vertical"
            android:paddingLeft="34dp"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textColor="@color/colorText"
            android:background="@drawable/address_background"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/timetable"
            android:lines="1"
            android:maxLines="1"
            android:gravity="left|center_vertical"
            android:paddingLeft="34dp"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textColor="@color/colorText"
            android:background="@drawable/open_background"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="bottom|left"
            android:textColor="@color/colorText"
            android:text="@string/hairdressers"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:id="@+id/hairdressers_title"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hairdressers_container"
            android:orientation="vertical" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="bottom|left"
            android:textColor="@color/colorText"
            android:text="@string/similar_businesses"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:visibility="gone"
            android:id="@+id/similar_businesses_title"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/similar_businesses_container"
            android:orientation="vertical"
            android:visibility="gone"/>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>